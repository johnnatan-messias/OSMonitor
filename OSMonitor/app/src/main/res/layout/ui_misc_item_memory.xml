<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/tx_memory_total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/ui_memory_total"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:textColor="@color/ltgrey_osmonitor" />

        <TextView
            android:id="@+id/id_memory_total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/ltgrey_osmonitor" 
            android:layout_weight="1" />
        
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
        
        <TextView
            android:id="@+id/tx_memory_free"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/ui_memory_free"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:textColor="@color/ltgrey_osmonitor" />

        <TextView
            android:id="@+id/id_memory_free"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/ltgrey_osmonitor" 
            android:layout_weight="1" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/tx_memory_cached"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/ui_memory_cached"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:textColor="@color/ltgrey_osmonitor" />

        <TextView
            android:id="@+id/id_memory_cached"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/ltgrey_osmonitor" 
            android:layout_weight="1" />
        
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
        
        <TextView
            android:id="@+id/tx_memory_buffered"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/ui_memory_buffered"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:textColor="@color/ltgrey_osmonitor" />

        <TextView
            android:id="@+id/id_memory_buffered"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/ltgrey_osmonitor" 
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>